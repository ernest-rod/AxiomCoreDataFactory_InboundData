{
	"name": "GetAdventureWorksDWFiles",
	"properties": {
		"description": "Get the AdventureWorks DW files from the SFTP.",
		"activities": [
			{
				"name": "Get_AW_DW_Files",
				"description": "Get Adventure Works DW files from Seagate SFTP",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "SftpReadSettings",
							"recursive": true,
							"wildcardFolderPath": "home/ernest/ftp/test_area",
							"wildcardFileName": "*.csv"
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "AW_CSV_Files",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "AW_DW_Files",
						"type": "DatasetReference"
					}
				]
			}
		],
		"concurrency": 1,
		"folder": {
			"name": "Axiom Pipelines/Test Area"
		},
		"annotations": []
	}
}